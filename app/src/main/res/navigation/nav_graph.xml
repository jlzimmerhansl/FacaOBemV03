<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/listaDoadores">

    <fragment
        android:id="@+id/listaDoadores"
        android:name="com.example.facaobemv03.ListaDoadoresFragment"
        android:label="@string/first_fragment_label"
        tools:layout="@layout/fragment_listadoadores">

        <action
            android:id="@+id/action_inserir_doador"
            app:destination="@id/adicionadoadores" />
        <action
            android:id="@+id/action_alterar_doador"
            app:destination="@id/alteradoadores" />
    </fragment>
    <fragment
        android:id="@+id/adicionadoadores"
        android:name="com.example.facaobemv03.AdicionaDoadoresFragment"
        android:label="@string/second_fragment_label"
        tools:layout="@layout/fragment_adicionadoadores">

        <action
            android:id="@+id/action_SecondFragment_to_FirstFragment"
            app:destination="@id/listaDoadores" />
    </fragment>
    <fragment
        android:id="@+id/alteradoadores"
        android:name="com.example.facaobemv03.alteraDoadoresFragment"
        android:label="fragment_alteradoadores"
        tools:layout="@layout/fragment_alteradoadores" >
        <action
            android:id="@+id/action_alteradoadores_to_listaDoadores"
            app:destination="@id/listaDoadores" />
    </fragment>
</navigation>
